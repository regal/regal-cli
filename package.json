{
    "name": "regal-cli",
    "version": "0.1.0",
    "description": "Command line interface for creating games with the Regal Framework",
    "author": "Joe Cowman <joe.r.cowman@gmail.com> (http://joecowman.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/regal/regal-cli"
    },
    "bin": {
        "regal": "./bin/regal"
    },
    "main": "dist/regal-cli.cjs.js",
    "module": "dist/regal-cli.esm.js",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "rollup -c",
        "clean": "trash dist",
        "lint": "node node_modules/tslint/bin/tslint -c tslint.json --format stylish 'src/**/*.ts'",
        "verify-unix": "chmod +x ./bin/regal && ./bin/regal",
        "commit": "git-cz"
    },
    "prettier": {
        "tabWidth": 4
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "commander": "^2.19.0"
    },
    "peerDependencies": {
        "regal-bundler": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^10.12.24",
        "commitizen": "^3.0.5",
        "cz-conventional-changelog": "^2.1.0",
        "prettier": "^1.16.4",
        "regal-bundler": "^1.0.0",
        "rollup": "^1.1.2",
        "rollup-plugin-cleanup": "^3.1.1",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-typescript2": "^0.19.2",
        "trash-cli": "^1.4.0",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.3.3"
    }
}
